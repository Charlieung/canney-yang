---
import * as AboutContent from '../content/About.md';
---
<section class="page-section" id="team">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">About</h2>
            <h3 class="section-subheading text-muted">Massage therapy helps people to relieve stress</h3>
        </div>
        <div class="row">
            <div class="team-member">
                <img class="mx-auto rounded-circle" src="src/assets/img/team/1.jpg" alt="..." />
                <h4>{AboutContent.frontmatter.name}</h4>
                <p class="text-muted">{AboutContent.frontmatter.title}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <AboutContent.Content >
                <br />
                <p class="text-muted">Member of The New York State Society of Medical Massage Therapists (NYSSMMT)</p>
                <a href="https://www.amtamassage.org/"><img src="src/assets/img/amta.png" alt="..." /></a>
            </div>
        </div>
    </div>
</section>