---
import * as AboutContent from '../content/About.md';
import teamImage1 from '../assets/img/team/1.jpg';
import amtaImage from '../assets/img/amta.png';
---
<section class="page-section" id="team">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">About</h2>
            <h3 class="section-subheading text-muted">Massage therapy helps people to relieve stress</h3>
        </div>
        <div class="row">
            <div class="team-member">
                <img class="mx-auto rounded-circle" src={teamImage1.src} alt="Canney S. Yang" />
                <h4>{AboutContent.frontmatter.name}</h4>
                <p class="text-muted">{AboutContent.frontmatter.title}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <p class="large text-muted">{AboutContent.rawContent}</p>
                <br />
                <p class="text-muted">Member of The New York State Society of Medical Massage Therapists (NYSSMMT)</p>
                <a href="https://www.amtamassage.org/"><img src={amtaImage.src} alt="AMTA - American Massage Therapy Association Logo" /></a>
            </div>
        </div>
    </div>
</section>