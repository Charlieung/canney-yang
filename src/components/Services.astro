---
<section class="page-section bg-light" id="portfolio">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Services</h2>
            <h3 class="section-subheading text-muted">I provide the following services</h3>
        </div>
        <div class="row">
            {services.map(service => (
                <div class="col-lg-4 col-sm-6 mb-4">
                    <div class="portfolio-item">
                        <a class="portfolio-link" data-bs-toggle="modal" href={`#portfolioModal${service.id}`}>
                            <div class="portfolio-hover">
                                <div class="portfolio-hover-content"><i class="fas fa-plus fa-3x"></i></div>
                            </div>
                            <img class="img-fluid" src={service.image} alt="..." />
                        </a>
                        <div class="portfolio-caption">
                            <div class="portfolio-caption-heading">{service.title}</div>
                            <div class="portfolio-caption-subheading text-muted">{service.subtitle}</div>
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>

{services.map(service => (
    <PortfolioModal
        id={`portfolioModal${service.id}`}
        title={service.title}
        subtitle={service.subtitle}
        image={service.image}
        description={service.description}
        details={service.details}
    />
))}